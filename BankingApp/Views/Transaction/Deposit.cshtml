@model BankingApp.ViewModel.DepositViewModel

@{
    ViewData["Title"] = "Deposit";
}

<h2>@ViewData["Title"]</h2>

@Html.Partial("_UserAccountDetails")

<form asp-action="Deposit">
    <div class="form-horizontal">
        <div class="text-danger">@Html.ValidationMessage("Error")</div>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Make a Deposit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
